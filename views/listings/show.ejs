<%layout("/layouts/boilerplate.ejs")%>
<body>
  <div class="row">
    <div class="row">
      <div class="col-sm-12">
        <h3 class="text-center">Listing Detail</h3>
      </div>
    </div>
  <div class="row ">
    <div class="col-sm-12 d-flex justify-content-center">
      <div class="card">
        <img src="<%=listing.image%>" style="height: 20rem; width: 30rem; object-fit:cover;" class="card-img-top border-0 rounded-3" alt="Listing_Image">
        <div class="card-body">
          <p class="card-text mt-2">
            <b><b>Name:</b> <%=listing.title %></b><br>
            <p style="width: 30rem;"><b>Description:</b> <%=listing.description %></p>
            <b>Price:</b>&#8377;<%=listing.price.toLocaleString("en-IN") %> <br>
            <b>Location:</b> <%=listing.location %> <br>
            <b>Country:</b> <%=listing.country %>
    
          </p>
          <div class="d-flex flex-row mb-3">
            <div><a href="/listing/<%= listing._id%>/edit" class="btn btn-dark">Edit this Listing</a></div>
            <div  class="ms-2">
              <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                <button class="btn btn-danger">Delete This Listing</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 
</div>

  
</body>
