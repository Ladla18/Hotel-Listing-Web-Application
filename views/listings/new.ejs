<%layout("/layouts/boilerplate.ejs")%>

<body>

    <div class="container">
        <form class="form-group needs-validation" action="/listings" method="post" novalidate enctype="multipart/form-data">
            <div class="form-group py-3">
                <label for="title">Enter Title</label>
                <input type="text" name="listing[title]" class="form-control" placeholder="Enter Title" id="title" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Give a Title.
                  </div>
            
            </div>
            <div class="form-group py-3">
                <label for="description">Description</label>
                <textarea name="listing[description]" class="form-control" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Write Description.
                  </div>
            </div>
            <div class="form-group py-3">
                <label for="image">Upload Image</label>
                <input type="file" name="listing[image]" class="form-control"  id="image" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Provide a image Link.
                  </div>
            </div>
            <div class="form-group py-3">
                <label for="price">Price</label>
                <input type="text" name="listing[price]" class="form-control" placeholder="Enter Price" id="price" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Set a Price.
                  </div>
            </div>
            <div class="form-group py-3">
                <label for="location">Enter Location</label>
                <input type="text" name="listing[location]" class="form-control" placeholder="Enter Location" id="location" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please set a Location.
                  </div>
            </div>
            <div class="form-group py-3">
                <label for="country">Enter Country</label>
                <input type="text" name="listing[country]" class="form-control" placeholder="Enter Country" id="country" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please set a Country.
                  </div>
            </div>
            <div class="form-group py-3">
                <button class="btn btn-primary">ADD</button>
            </div>
        </form>
        
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

